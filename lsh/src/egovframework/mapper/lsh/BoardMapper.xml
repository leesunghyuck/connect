<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lsh.mapper.BoardMapper">

	<resultMap type="lsh.service.BoardVO" id="resultMap-BoardVO">
		<result property="rn" column="RN" />
		<result property="seq" column="SEQ" />
		<result property="title" column="TITLE" />
		<result property="content" column="CONTENT" />
		<result property="createName" column="CREATE_NAME" />
		<result property="createDate" column="CREATE_DATE" javaType="date" jdbcType="TIMESTAMP" />
	</resultMap>

	<select id="getBoardList" resultType="lsh.service.BoardVO" resultMap="resultMap-BoardVO">
		SELECT
			R.*
		FROM
		(
			SELECT
				ROW_NUMBER() OVER (ORDER BY SEQ DESC) AS RN,
				ALL_LIST.*
			FROM
			(
				SELECT
					SEQ
					,TITLE
					,CONTENT
					,CREATE_NAME
					,CREATE_DATE
				FROM
					LSH_BOARD
			) ALL_LIST
		) R
		WHERE RN <![CDATA[ >= ]]> 1 AND RN <![CDATA[ <= ]]> 13
	</select>

	<select id="getViewList" resultType="lsh.service.BoardVO" resultMap="resultMap-BoardVO">
		SELECT
			SEQ
			,TITLE
			,CONTENT
			,CREATE_NAME
			,CREATE_DATE
		FROM
			LSH_BOARD
		WHERE SEQ = #{seq}
	</select>

	<select id="totalCount" resultType="Integer">
		SELECT
			COUNT(*) AS TOTAL_CNT
		FROM
			LSH_BOARD
	</select>

	<insert id="boardInsert" parameterType="lsh.service.BoardVO" >
		INSERT INTO LSH_BOARD VALUES(
			(nvl((SELECT MAX(seq) FROM LSH_BOARD) + 1, 1)),
			#{title},
			#{content},
			#{createName},
			SYSDATE
		)
	</insert>

	<delete id="boardDelete" parameterType="String">
		DELETE FROM LSH_BOARD
		WHERE SEQ = #{seq}
	</delete>

</mapper>